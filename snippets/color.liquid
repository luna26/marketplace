{% if section.blocks.size > 0 %}  
{% if section.settings.enable_shop_by_tags_1 %}
<div id="shopify-section-sidebar-color" class="shopify-section"> 
<aside class="sidebar-tag filter color tags" data-section-id="{{ section.id }}" >  
  <div class="widget">
    <h4>{{ section.settings.shop_by_tags_1_title  }}
      <a href="javascript:void(0)" class="clear" style="display:none">
        <i class="mdi mdi-close-circle" aria-hidden="true"></i>
      </a>
    </h4>
    <div class="widget-content">
      <ul>
        {% assign counter = 0 %}
        {% for block in section.blocks %}  
        {% if block.type == 'image' %}
        {% if  block.settings.title != blank %}
        {% assign tag = block.settings.title | strip %} 
        {% if collection.tags contains tag %} 
        <li class="{{ tag | handle}}">
          {% assign tag_value = tag | handleize %}
          <input type="checkbox" value="{{ tag_value }}" {% if current_tags contains tag %}checked{% endif %}/>
          <a href="javascript:void(0)"  {% if current_tags contains tag %} class="active" {% endif %} title="{{tag}}">              
            <img loading="lazy" src="{{ block.settings.color | img_url: '50x' }}" alt="{{tag}}"/>
            <span>{{ tag }}</span>                
          </a>
        </li>  
        {% assign counter = counter | plus:1 %}
        {% endif %}
        {% endif %}  
        {% endif %}
        {% endfor %}
        {% if counter == 0 %}<script>$('.sidebar-tag.color').hide();</script>{% endif %}
      </ul>
    </div>
  </div>
</aside>
</div>
{% endif %}
{% endif %}  
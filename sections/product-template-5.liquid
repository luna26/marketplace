<script>
  jQuery(document).ready(function() {  
    $('.full_gallery_slider.owl-carousel').on('changed.owl.carousel',function(property) {
      var totalItems     = property.item.count;	 
      var currentItem   =  property.item.index - property.relatedTarget._clones.length / 2
      currentItem = currentItem +1;
      $(".num").html(currentItem+'/'+totalItems); 
    });
    $('body:not(.rtl) .full_gallery_slider.owl-carousel').owlCarousel({
      stagePadding: 460,
      loop:true,
      startPosition:0,
      center: true,
      dots:true,
      singleItem:true,
      items:1,
      lazyLoad: true,
      nav:true,
      responsive:{
        0:{
          items:1,
          stagePadding: 50
        },
        600:{
          items:1,
          stagePadding: 80
        },
        992:{
          items:1,
          stagePadding: 80
        },
        1400:{
          items:1,
          stagePadding: 150
        },
        1600:{
          items:1,
          stagePadding: 200
        },
        1800:{
          items:1,
          stagePadding: 460
        }
      }
    });
    $('body.rtl .full_gallery_slider.owl-carousel').owlCarousel({
      stagePadding: 460,
      loop:true,
      startPosition:0,
      center: true,
      dots:true,
      items:1,
      rtl:true,
      lazyLoad: true,
      nav:true,
      responsive:{
        0:{
          items:1,
          stagePadding: 50
        },
        600:{
          items:1,
          stagePadding: 80
        },
        992:{
          items:1,
          stagePadding: 80
        },
        1400:{
          items:1,
          stagePadding: 150
        },
        1600:{
          items:1,
          stagePadding: 200
        },
        1800:{
          items:1,
          stagePadding: 460
        }
      }
    });

    $('.print').on('click', function(e) {

      $('.preview-print').printThis({
        importStyle: $(this).hasClass('importStyle')
      });
    });

  });
</script>

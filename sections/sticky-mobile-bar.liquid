  }
  

  

.sticky_cnt {
	float: left;
	width: 100%;
	padding: 0 5px;
	overflow: hidden;
}

.sticky_cnt a:last-child {
	float: left;
	width: 100%;
	overflow: hidden;
}

.main-sticky-data .sticky-data svg {
	color: #222;
}

.sticky_title {
	float: left;
	width: 100%;
	text-overflow: ellipsis;
	white-space: nowrap;
	margin: 3px 0 0;
	color: #222;
      line-height: 20px;

	font-weight: 500;
}

@media (max-width: 480px) {
	.sticky_title {
		font-size: 10px;
	}

	.main-sticky-data .sticky-data svg {
		width: 20px;
		height: 20px;
	}
}

/*--------------------------Mobile bar sticky End------------------------------*/
</style>




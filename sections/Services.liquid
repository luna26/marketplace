{% if section.blocks.size > 0 %} 
<div id="ttcmsservices" class="col-sm-11 bottom-to-top hb-animate-element">  
  <div class="container">
    <div class="block_content owl-carousel" style="display: block;">
      {% for block in section.blocks %}      
      <div class="ttservice-wrap">
        <div class="ttcontent">
          <div class="service">
            <div class="ttshipping_img service-icon">
              <img loading="lazy" src="{{  block.settings.service_icon | img_url: "master" }}" alt="services" />
            </div>
            <div class="content">
              <div class="service-title">{{  block.settings.title }}</div>
              <div class="service-desc">{{  block.settings.subtitle }}</div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
<style>.ttservice-wrap .service-title{color: {{ section.settings.title_color }};}.ttservice-wrap .service-desc{color: {{ section.settings.subtitle_descolor }};}#ttcmsservices .ttservice-wrap:hover .content .service-title {color: {{ section.settings.title_hover_color }};}</style>

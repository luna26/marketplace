{% schema %}
{
"name": "category slider",
"class": "index-section category slider",
"settings": [
{
"type": "checkbox",
"id": "product_rows",
"label": "2 Rows Product",
  "info" : "2 Row Only Work When, More Then 8 Product On Your Collection"

},
        {
"type": "range",
"id": "product_col_desktop_pro",
"min": 2,
"max": 20,
"step": 1,
"label": "Number of columns on Desktop",
"default": 3
},


{
"type": "range",
"id": "product_col_mobile_pro",
"min": 1,
"max": 3,
"step": 1,
"label": "Number of columns on Mobile",
"default": 1
},
{
"type": "color",
"id": "type_bg",
"label": "Background color",
"default": "#fff"
},
{
"type": "text",
"id": "title_1",
"label": "Heading"
},
{
"type": "color",
"id": "title_1_clr",
"label": "Heading color",
"default": "#000"
}
],
"blocks": [	
{
"type": "text_block",
"name": "Column",
"settings": [


  

          {
        "type": "checkbox",
        "id": "show_banner",
        "label": "Display Banner",
        "default": true
      },

    {
"type": "text",
"id": "banner_subtitle",
"label": "Banner Sub-title",
"default": "Flat UpTo 30% OFF"
},
  
{
"type": "text",
"id": "banner_title",
"label": "banner title"
},
{
"type": "color",
"id": "banner_title_clr",
"label": "banner title color"
},


  {
"type": "color",
"id": "banner_subtitle_clr",
"label": "banner Sub-title color"
},
  
{
"type": "text",
"id": "banner_btn_txt",
"label": "banner button text"
},
{
"type": "url",
"id": "banner_btn_txtlink",
"label": "banner button link"
},
{
"type": "color",
"id": "banner_btn_bg",
"label": "banner button color"
},
{
"type": "color",
"id": "banner_btn_txt_clr",
"label": "banner button text color"
},
{
"type": "color",
"id": "banner_btn_hovertxt",
"label": "banner button hover text color"
},
{
"type": "color",
"id": "banner_btn_hoverbg",
"label": "banner button hover color"
},

{
"type": "image_picker",
"id": "cat_image1",
"label": "Image"
},

  

	
{
"type": "text",
"id": "title",
"label": "Collection Name",
"default": "Tab Name"
},	

  
{
"id": "collection",
"type": "collection",
"label": "Collection"
}	
]
}
],
"presets": [
{
"name": "category slider",
"category": "Collection",
"blocks": [
{
"type": "text_block"
}        
]
}
]
}

<div {% if settings.enable_animation != blank %} data-aos="fade-up" {% endif %} data-section-id="{{ section.id }}"  data-section-type="product-tab-type-1" class="category-slider">
  {%- assign collection = collections[section.settings.collection] -%}
  {%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
  {%- assign image_size = '170x170' -%}
  {%- assign product_limit =  8 -%}
    <div class="grid__item">        
      {% if section.settings.title_1 != blank or section.settings.text_1  %}
      <div class="box-heading tthometab-title section-header">
        {% endif %}  
        {% if section.settings.title_1 != blank %}
        <h2 class="tt-title">{{ section.settings.title_1 }}</h2>
        {% endif %}
        {% if section.settings.title_1 != blank or section.settings.caption_1  %}
        <ul id="tab_product_{{ section.id }}" class="nav nav-tabs">  
          {%  assign block_size = 1 %} 
          {% for block in section.blocks %} 
          {% if block.settings.title != blank %}
          <li class="tabs{% if block_size == 1 %} active{% endif %}"><a href="#tabs-{{ block.id }}" data-toggle="tab" aria-expanded="false">{{ block.settings.title }}</a></li>     
          {% endif %}
          {% assign block_size = block_size | plus: 1 %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}
      {% if section.blocks.size > 0 %} 
      <div class="TTProduct-Tab-container{% if section.settings.type_bg != "rgba(0,0,0,0)" %} has_bg{% endif %}"> 
        <div class="TTcatProduct-Tab"> 
          <div class="tab-inner tab-content tab-container{% if section.settings.product_rows %} two_rows{% endif %}">   
            <div class="row">
              {% assign block_size = 1 %}  
              {% for block in section.blocks %}
              {%- assign collection = collections[block.settings.collection] -%}
              {% assign cnt = 1 %}  
              {%- assign foundpro = collection.products.count -%} 
              <div id="tabs-{{ block.id }}" class="contents tab-pane fade product_col_desktop_pro{{ section.settings.product_col_desktop_pro }} product_col_mobile_pro{{ section.settings.product_col_mobile_pro }}{% if block_size == 1 %} in active{% endif %}">

              {% if block.settings.show_banner != blank %}
                <div class="categoryimage col-sm-2 ">
                  {% if block.settings.cat_image1 != blank %}
                  <img loading="lazy" height="auto" width="245px" src="{{ block.settings.cat_image1 | img_url: "master"  }}" alt="category slider" />
                    {% endif %}
                  <div class="content">

                {% if block.settings.banner_subtitle != blank %}
                    <div class="banner-subtitle"> {{ block.settings.banner_subtitle }} </div>
                {% endif %}
                    <div class="banner-title">{{ block.settings.banner_title }}</div>
                    <a href="{{ block.settings.banner_btn_txtlink }}" class="btn"><div class="banner-btn">{{ block.settings.banner_btn_txt }}</div></a>
                  </div>
                  <style> .category-slider #tabs-{{ block.id }} .categoryimage .content .banner-subtitle{color:{{ block.settings.banner_subtitle_clr }};} .category-slider #tabs-{{ block.id }} .categoryimage .content .banner-title{color:{{ block.settings.banner_title_clr }};}.category-slider #tabs-{{ block.id }} .categoryimage .content a{color:{{ block.settings.banner_btn_txt_clr }};background:{{ block.settings.banner_btn_bg }};}.category-slider #tabs-{{ block.id }} .categoryimage .content a:hover{color:{{ block.settings.banner_btn_hovertxt }};background:{{ block.settings.banner_btn_hoverbg }};}</style>
                </div>   
              {% endif %}
                
                <div class="cat-slider  {% if block.settings.show_banner != blank %} col-sm-10 {% else %} awidth col-12{% endif %}">
                  <div class="{{ block.settings.title | handle }}-{{ block.id }} {{ block.settings.title | handle }}-wrap owl-carousel owl-theme">
                    {% for product in collection.products limit:product_limit %}
                    {%- assign mod_2 = cnt | modulo:2 -%}
                    {% if foundpro >= 8 and foundpro >= 4%}
                    {% if section.settings.product_rows %}
                    {%  if mod_2 != 0  %}
                    <div class='li_single'>
                      {% endif    %}
                      {% endif  %}
                      {% endif %}
                      {% render 'product-card-grid',collection: collection, product: product, grid_image_width: image_size %}
                      {% if foundpro >= 8 and foundpro >= 4 %}
                      {% if section.settings.product_rows %}
                      {%  if mod_2 == 0  %}
                    </div>
                    {% endif %}
                    {% endif %}
                    {% assign cnt = cnt | plus: 1 %}
                    {% endif %}
                    {% endfor %}
                    {% if foundpro >= 8 and foundpro >= 4 %}
                    {% if section.settings.product_rows %}
                    {%  if mod_2 != 0  %}
                  </div>
                  {% endif %}
                  {% endif %}
                  {% endif %} 
                </div>
              </div>  
              {% if foundpro > 4 and foundpro < 8 or foundpro >= 8 %}
              <div class="{{ block.settings.title | handle }}-nav customNavigation">
                <div class="navigation_wrap">
                  <a class="prev mdi-chevron-left">{{ 'general.slider.prev' | t }}</a>
                  <a class="next mdi-chevron-right">{{ 'general.slider.next' | t }}</a> 
                </div>
              </div>
              {% endif %}
            </div> 



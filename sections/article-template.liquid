"name": "Article",
"settings": [
{
"type": "checkbox",
"id": "social_sharing",
"label": "Enable blog post sharing"
},{
"type": "checkbox",
"id": "enable_left_sidebar",
"label": "Enable blog Left sidebar",
"info": "Enable blog Left sidebar if theme layout without sidebar"
}
]
}
{% endschema %}
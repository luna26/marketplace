<div {% if settings.enable_animation != blank %} data-aos="fade-up" {% endif %} data-section-id="{{ section.id }}"  data-section-type="product-tab-type-1" class="product-tab-type-1 tab-model-wrap {{ section.settings.class }}">
  {%- assign collection = collections[section.settings.collection] -%}
  {%- assign grid_item_width = 'small--one-half medium-up--one-quarter' -%}
  {%- assign image_size = '270x270' -%}
  {%- assign product_limit =  10 -%}
    <div class="grid__item{% if section.settings.type_bg != "rgba(0,0,0,0)" %} has_bg{% endif %}">        
      {% if section.settings.title_1 != blank or section.settings.text_1  %}
      <div class="box-heading tthometab-title section-header">
        {% endif %}  
        {% if section.settings.title_1 != blank %}
        <h2 class="tt-title">{{ section.settings.title_1 }}</h2>
        {% endif %}
        {% if section.settings.title_1 != blank or section.settings.caption_1  %}
        <ul id="tab_product_{{ section.id }}" class="nav nav-tabs"> 
          {%  assign block_size = 1 %} 
          {% for block in section.blocks %} 
          {% if block.settings.title != blank %}
          <li class="tabs{% if block_size == 1 %} active{% endif %}"><a href="#tabs-{{ block.id }}" data-toggle="tab" aria-expanded="false">{{ block.settings.title }}</a></li>     
          {% endif %}
          {% assign block_size = block_size | plus: 1 %}
          {% endfor %}
        </ul>
      </div>
      {% endif %}
      {% if section.blocks.size > 0 %} 
      <div class="TTProduct-Tab-container"> 
        <div class="TTProduct-Tab"> 
          <div class="tab-inner tab-content tab-container{% if section.settings.product_rows %} two_rows{% endif %}">   
            <div class="row">
              {%  assign block_size = 1 %}  
              {% for block in section.blocks %}
              {%- assign collection = collections[block.settings.collection] -%}   
              {%  assign cnt = 1 %}  
              {%-  assign foundpro = collection.products.count -%} 
              <div id="tabs-{{ block.id }}" class="contents tab-pane fade product_col_desktop_pro{{ section.settings.product_col_desktop_pro }} product_col_mobile_pro{{ section.settings.product_col_mobile_pro }}{% if block_size == 1 %} in active{% endif %}">
                <div class="{{ block.settings.title | handle }}-{{ block.id }} {{ block.settings.title | handle }}-wrap owl-carousel owl-theme">
                  {% for product in collection.products %}
                  {%- assign mod_2 = cnt | modulo:2 -%}
                  {% if section.settings.product_rows %}
                  {% if foundpro >= 8 %}
                  {%  if mod_2 != 0  %}
                  <div class='li_single'>
                    {% endif    %}
                    {% endif  %}
                    {% endif %}
                    {% render 'product-card-grid', collection: collection, product: product, grid_image_width: image_size %}
                    {% if section.settings.product_rows %}
                    {% if foundpro >= 8 %}
                    {%  if mod_2 == 0  %}
                  </div>
                  {% endif    %}
                  {% endif  %}
                  {% assign cnt = cnt | plus: 1 %}
                  {% endif %}
                  {% endfor %}
                  {% if section.settings.product_rows %}
                  {% if foundpro >= 8 %}
                  {%  if mod_2 != 0  %}
                </div>
                                
                {% endif    %}
                {% endif    %}
                {% endif    %}   

                
              </div>              
            <div class="{{ block.settings.title | handle }}-nav customNavigation">
                <div class="navigation_wrap">
                  <a class="prev mdi-chevron-left">{{ 'general.slider.prev' | t }}</a>
                  <a class="next mdi-chevron-right">{{ 'general.slider.next' | t }}</a> 
                </div>
             </div>

                          {% if block.settings.btn_title1 != blank %}

        <a href="{{ block.settings.category_btn_urls }}" class="ttcategory-btn btn-border">
                      {{ block.settings.btn_title1 }}
         </a>
               {% endif    %} 
            </div> 



